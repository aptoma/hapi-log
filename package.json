{
  "name": "@aptoma/hapi-log",
  "author": "Martin Jonsson <martin@aptoma.com>",
  "version": "3.1.1",
  "description": "Hapi Log Plugin",
  "main": "index.js",
  "bin": {
    "pretty-hapi-log": "./lib/pretty.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:aptoma/hapi-log.git"
  },
  "scripts": {
    "lint": "eslint --ext '.js' lib test '*.js'",
    "test": "npm run lint && NODE_ENV=test istanbul cover -i '{.,./lib}/*.js' _mocha -- -u exports -R spec --timeout 3000 'test/**/*.test.js'",
    "watch": "mocha --watch 'test/**/*.js' --timeout 500",
    "ci": "npm test --coverage && istanbul report cobertura",
    "release": "npm test && release-it -n -i patch",
    "release:minor": "npm test && release-it -n -i minor",
    "release:major": "npm test && release-it -n -i major"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "chalk": "^1.1.3",
    "hoek": "^4.1.0",
    "json-stringify-safe": "^5.0.1",
    "moment": "^2.15.2"
  },
  "devDependencies": {
    "@aptoma/eslint-config": "^5.0.1",
    "eslint": "^3.8.1",
    "hapi": "^15.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nsp": "^2.0.2",
    "release-it": "^2.0.3",
    "should": "^11.1.1",
    "sinon": "^1.16.1"
  }
}
